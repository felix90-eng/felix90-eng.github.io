            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ vehicle.telephone }}</td>
            </tr>
            <tr>
                <th>Tripamount</th>
                <td>{{ vehicle.tripamount }}</td>
            </tr>
            <tr>
                <th>Tripdays</th>
                <td>{{ vehicle.tripdays }}</td>
            </tr>
            <tr>
                <th>Totalamount</th>
                <td>{{ vehicle.totalamount }}</td>
            </tr>
            <tr>
                <th>Transporterstyle</th>
                <td>{{ vehicle.transporterstyle }}</td>
            </tr>
            <tr>
                <th>Ttelephone</th>
                <td>{{ vehicle.ttelephone }}</td>
            </tr>
            <tr>
                <th>Timedisparture</th>
                <td>{{ vehicle.timedisparture ? vehicle.timedisparture|date('Y-m-d') : '' }}</td>
