{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}

<div class ="col-sm-9">
    <h1>Staff requested vehicle</h1>

     <a href="{{ path('vehicle_index') }}">back to list</a>

    <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}">edit</a>

    {{ include('vehicle/_delete_form.html.twig') }}

    <div class ="jumbotron">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Purpose</th>
                <td>{{ vehicle.purpose }}</td>
            </tr>
            <tr>
                <th>Transportername</th>
                <td>{{ vehicle.transportername }}</td>
            </tr>
            <tr>
                <th>Companyname</th>
                <td>{{ vehicle.companyname }}</td>
            </tr>
            <tr>
                <th>Platno</th>
