{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
<div class ="col pt-2">
    <h1>Location index</h1>

    <a href="{{ path('location_new') }}">Create new</a>
    <table id ="myTable" class="records_list table table-striped table-bordered  dt-responsive " cellspacing="0" ">
      
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.location }}</td>
                <td>
                    <a href="{{ path('location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

<script>
$(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
{% endblock %}
