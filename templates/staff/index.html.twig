{% extends 'base.html.twig' %}

{% block title %}Staff index{% endblock %}

{% block body %}

<div class ='col pt-2'>
    <h1>Staff List</h1>
 <div class='table-responsive'>
 
    <a href="{{ path('staff_new') }}">Create new</a>

    <table id ="myTable" class="table table-striped table-bordered " cellspacing="0" ">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Gender</th>
                <th>Mobile</th>
                 <th>Departmentr</th>
                  <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff in staff %}
            <tr>
                <td>{{ staff.id }}</td>
                <td>{{ staff.firstName }}</td>
                <td>{{ staff.lastName }}</td>
                <td>{{ staff.gender }}</td>
                <td>{{ staff.mobileNumber }}</td>
                <td>{{ staff.department }}</td>
                <td>{{ staff.designation }}</td>
                <td>
                    <a href="{{ path('staff_show', {'id': staff.id}) }}">show</a>
                    <a href="{{ path('staff_edit', {'id': staff.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
      </div>
 

   
</div>
</div>
</div>

<script>
$(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>

{% endblock %}

